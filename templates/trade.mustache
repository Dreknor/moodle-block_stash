{{!
    Trade element.
}}
<div id="{{uuid}}" style="display: inline;">
    <div class="block-stash-trade" title="{{trade.name}}" data-id="{{trade.id}}">
        <div class="trade-label text-center p-y-1">{{trade.name}}</div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span6">
                        <div class="block-stash-column-title"><strong>{{trade.gaintitle}}</strong></div>
                        {{#tradeitems}}
                            {{#gainloss}}
                            <div class="block-stash-trade-item">
                            {{>block_stash/item_xsmall}} {{itemname}} ({{quantity}})
                            </div>
                            {{/gainloss}}
                        {{/tradeitems}}
                    </div>
                    <div class="span6">
                        <div class="block-stash-column-title"><strong>{{trade.losstitle}}</strong></div>
                        {{#tradeitems}}
                            {{^gainloss}}
                            <div class="block-stash-trade-item">
                            {{>block_stash/item_xsmall}} {{itemname}} ({{quantity}})
                            </div>
                            {{/gainloss}}
                        {{/tradeitems}}
                    </div>
                </div>
            </div>
        <div class="accept-trade text-xs-center p-y-1">
            <center><button>Accept</button></center>
        </div>
    </div>
</div>

{{#js}}
require(["jquery", "block_stash/trade"], function($, Trade) {
    var trade = new Trade({id: {{trade.id}}, hashcode: '{{trade.hashcode}}'}),
        node = $("#{{uuid}}");

    if (!node.length) return;

    {{#checkvisibility}}
    trade.isVisible().then(function() {
        node.css('display', 'inline');
    });
    {{/checkvisibility}}

    node.find("button").click(function(e) {
        e.preventDefault();
        trade.do();
    });
});
{{/js}}